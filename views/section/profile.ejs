<div class="profile-content">
  <h3>Modification des utilisateurs</h3>
  <div class="column">
    <p>Adresse email : <%= user.email %></p>
    <p>Nom d'utilisateur : <%= user.username %></p>
    <p>Nom complet : <%= user.fullname %></p>
    <p>Date de création : <%= user.dateCreation.toLocaleDateString('fr-FR') %></p>
  </div>

  <form action="/modif_profile" method="post">
    <div class="column">
      <div class="row">
        <div class="column-4">
          <p>Mode viewer</p>
          <select name="viewerMode_mp">
            <option value="0" <% if (user.profil.viewerMode && user.profil.viewerMode == 0) { %>Selected<% } %>>Non</option>
            <option value="1" <% if (user.profil.viewerMode && user.profil.viewerMode == 1) { %>Selected<% } %>>Mobile</option>
            <option value="2" <% if (user.profil.viewerMode && user.profil.viewerMode == 2) { %>Selected<% } %>>Oui</option>
          </select>
        </div>
        <div class="column-4">
          <p>Mode privé</p>
          <label class="container">
            <input type="checkbox" name="privateMode_mp" <% if (user.profil.privateMode) { %>checked<% } %>>
            <span class="checkmark"></span>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <p>Nombre de mois</p>
          <input id="nbrMonth_mp" type="number" name="nbrMonth_mp" value="<%= user.profil.nbrMonth %>" max="12" require="" >
        </div>
      </div>
    </div>
    <div class="column">
      <input type="submit" class="btn btn-blue" value="APPLIQUER">
    </div>
  </form>
  <div class="clear"></div>
</div>
